<div class="span-16" id="header_wrapper">
  <div class="span-16 last section_margin_top">
  	<h1>Plan </h1>
  </div>
  <%= render :partial => 'tabs' %>
</div>
<div class="span-18 last page_content">
  <div class="span-16 last" style="display:none;" data-behavior="expander" data-state="expanded" data-id="new_task_form">
		<%= form_for @comment do |f| %>
			<div class="span-12">
				<%= f.text_area :body, :id => "primary_input", :class => "span-12" %>
			</div>
			<div class="span-4 last">
				<%= f.hidden_field :user_id %>
				<%= f.hidden_field :commentable_id %>
				<%= f.submit "Comment on this Plan" %>
				<a href="#" data-behavior="expander" data-action="contract" data-id="new_task_form">cancel</a>
			</div>
		<% end %>
	</div>
	<div id="comment_list_heading" class="span-16 last">
		<div class="span-12">
			<h2><%= @project.title %></h2>
		</div>
		<div class="span-4 last">
      	<div class="list_action attach_above" data-behavior="expander" data-state="contracted" data-id="new_comment_form"><a href="#" data-behavior="expander" data-action="expand" data-id="new_comment_form">add a comment</a></div>
		</div>
	</div>
	<div id="comments_wrapper" class="span-16 last section_wrapper" data-role="list">
    <div class="span-16 last line_item">
      <div class="span-9 text-center small">comment</div>
      <div class="span-3 text-center small">author</div>
      <div class="span-3 text-center small">date</div>
    </div>
		<% @project.comments.by_date.each_with_index do |task,index| %>
			<div class="span-16 last line_item" id="comment_<%= comment.id %>" data-role="list_item">
				<%= render :partial => '/comments/show', :locals => {:comment => comment} %>
			</div>
		<% end %>
	</div>
</div>