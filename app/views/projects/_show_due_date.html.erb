	<div class="span-3">
		<h2>Due Date</h2>
	</div>
	<div class="span-13 last">
    <div class="list_action">
  		<%= link_to (@project.due_date.blank? ? 'add due date' : 'edit due date'), edit_plan_url(@project, :attribute => 'due_date'),
  		 	:'data-ajax_behavior' => 'ajax_link',
  			:'data-ajax_method' => 'GET',
  			:'data-ajax_success_element' => 'project_due_date'
  		%>
    </div>
	</div>
	<div class="span-16 last section">
	  <% unless @project.due_date.blank? %>
	  <div class="border_bottom padding_bottom">
  	  <%= @project.due_date.to_formatted_s(:full) + ' ' + @project.due_date.zone %>
  	</div>
    <div class="span-15 list_section_inner section_margin_top">
      <%= render :partial => '/reminders/index', :locals => {:remindable => @project} %>
    </div>
    <% end %>
  </div>