<div class="span-3"><h1>Plan:
</h1></div>
<div class="span-15 last">
  <%= form_for @project, :url => plan_url(@project), :html => {
  	:'data-ajax_behavior' => 'ajax_form',
  	:'data-ajax_method' => 'PUT',
  	:'data-ajax_success_element' => 'project_title',
  	:'data-ajax_error_element' => 'project_title'
  } do |f| %>
  	<%= f.text_field :title, :class => 'span-11' %>
  	<%= hidden_field_tag 'attribute', 'title' %>
  	<span class="span-2"><%= f.submit 'save' %></span>
  	<%= link_to 'cancel', plan_url(@project),
  	 	:'data-ajax_behavior' => 'ajax_link',
  		:'data-ajax_method' => 'GET',
  		:'data-ajax_success_element' => 'project_title',
  		:'data-ajax_data' => "{attribute: 'title'}",
  		:class => 'span-2 last'%>
  <% end %>
</div>
