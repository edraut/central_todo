<h3>Email</h3>
<%= form_for @user, :html => {
	:'data-ajax_behavior' => 'ajax_form',
	:'data-ajax_method' => 'PUT',
	:'data-ajax_success_element' => 'account_email',
	:'data-ajax_error_element' => 'account_email'
} do |f| %>
	<%= f.text_field :email, :class => 'span-9' %>
	<%= hidden_field_tag 'attribute', 'email', :id => 'attribute_email_field' %>
	<button type="submit" class="row_item button round small light ">save description</button>
  <div class="row_item last padding_top_button small">&nbsp;or
	<%= link_to 'cancel', account_user_url(@user),
	 	:'data-ajax_behavior' => 'ajax_link',
		:'data-ajax_method' => 'GET',
		:'data-ajax_success_element' => 'account_email',
		:'data-ajax_data' => "{attribute: 'email'}"%>
  </div>
<% end %>
