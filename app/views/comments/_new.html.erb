<%= render :partial => '/context_help/textile_help' %>
<%= form_for comment, :html => {
	:'data-ajax_behavior' => 'ajax_form',
	:'data-ajax_method' => 'POST',
	:'data-ajax_success_element' => "comments_list",
	:'data-ajax_success_placement' => 'append',
	:'data-ajax_success_callback' => 
	  "jQuery('#primary_input').val(''); contractExpander('new_comment_form'); jQuery('#new_comment_form').rebindSubmit();handleCount();",
	:'data-ajax_error_element' => 'new_comment_wrapper',
	:id => 'new_comment_form'} do |f| %>
	<div class="span-12">
		<%= f.text_area :body, :id => "primary_input", :class => "span-12", :rows => 5 %>
	</div>
	<div class="span-1">
    <span onclick="void(0)" data-behavior="expander" data-action="expand" data-state="contracted" data-id="textile_formatting_help" data-style="visibility">?</span>
	</div>
	<div class="span-3 last">
		<%= f.hidden_field :user_id %>
		<%= f.hidden_field :commentable_id %>
		<%= f.hidden_field :commentable_type %>
  	<div class="row_item button round small light" data-button="true" data-submit="true" onclick="void(0)"><div class="button_content">comment</div></div>
  	<div class="text_with_button small">
		&nbsp;or <a href="#" data-behavior="expander" data-action="contract" data-id="new_comment_form">cancel</a>
    </div>
	</div>
<% end %>
