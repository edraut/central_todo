<h2>Situation: <span class="user_title"> <%= @situation.title %></span></h2>
<%= render :partial => 'tabs' %>
<div class="row">
  <div class="row_item">
    <h2>Enter tasks</h2>
  </div>
  <div class="row_item control_font" onclick="void(0)" data-behavior="expander" data-action="expand" data-state="contracted" data-id="new_task_form">&nbsp;+</div>
  <div class="row_item control_font" onclick="void(0)" data-behavior="expander" data-action="contract" data-state="expanded" data-id="new_task_form" style="display: none;">&nbsp;-</div>
</div>

<div data-behavior="expander" data-state="expanded" data-id="new_task_form" style="display:none;">
<%= form_for @task do |f| %>
		<%= text_field_tag :title_1, '', :id => "inbox_text_field_1" %>
		<%= text_field_tag :title_2, '', :id => "inbox_text_field_2" %>
		<%= text_field_tag :title_3, '', :id => "inbox_text_field_3" %>
		<%= f.hidden_field :situation_id %>
		<%= f.hidden_field :user_id %>
		<%= f.hidden_field :state, :value => 'active' %>
		<%= hidden_field_tag :app_context, 'situation' %>
		<%= f.submit "Add tasks to this Situation" %>
<% end %>
</div>
<div data-role="list" id="unarchived_items_wrapper" class="block">
  <div class="section">
	<h2><% if @tasks.any? %>Active Tasks<% else %>No active tasks.<% end %></h2>
	</div>
	<% for task in @tasks %>
	  <div id="task_<%= task.id %>" data-role="list_item" data-id="task_<%= task.id %>" class="section">
			<%= render :partial => '/tasks/show', :locals => {:task => task, :sortable => true} %>
		</div>
	<% end %>
</div>
<%= javascript_tag do %>
jQuery(document).ready(function(){
  bindExpanders();
});
<% end -%>
