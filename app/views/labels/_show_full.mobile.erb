<div id="label_page_<%= @label.id %>" class="pager" data-children_pages="({<% if @label.tasks.active.any? %>'<%= multiple_tasks_url(:ids => @label.tasks.active.recent.map{|t| t.id}.join(','), :app_context => @label.id.to_s + '_label') %>':'multiple_tasks_page_<%= @label.tasks.active.recent.map{|t| t.id}.join('_') %>',<% end %>'<%= labels_url %>':'all_labels','<%= edit_label_url(@label) %>':'info_label_page_<%= @label.id %>'})" data-direct_url="<%= label_path(@label) %>">
<%= render :partial => '/layouts/subnav' %>
<div class="page_layout">
  <h2><div class="row_item">Label:&nbsp;&nbsp;</div>
      <div class="label <%= @label.color %> row_item">
        <%= truncate_clean(@label.title, :length => 256, :omission => '...', :max_word_length => (session.has_key? :screen_width and (session[:screen_width].to_i < 500)) ? 20 : 256) %>
      </div>
  </h2>
  <%= render :partial => 'tabs' %>

  <div data-role="list" id="unarchived_items_wrapper" class="list_container">
    <div class="section">
      <div class="padding">
      	<h2><% if @tasks.any? %>Active Tasks<% else %>No active tasks.<% end %></h2>
  	  </div>
  	</div>
  	<% @tasks.each_with_index do |task,index| %>
  	  <div id="task_<%= task.id %>" data-role="list_item" data-id="task_<%= task.id %>" class="section" data-list_index="<%= index %>">
  			<%= render :partial => '/tasks/show', :locals => {:task => task} %>
  		</div>
  	<% end %>
  </div>
</div>
</div>