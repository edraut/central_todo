<h2>Label: <span class="user_title"> <%= @label.title %></span></h2>
<%= render :partial => 'tabs' %>

<div data-role="list" id="unarchived_items_wrapper" class="block">
  <div class="section">
	<h2><% if @tasks.any? %>Active Tasks<% else %>No active tasks.<% end %></h2>
	</div>
	<% for task in @tasks %>
	  <div id="task_<%= task.id %>" data-role="list_item" data-id="task_<%= task.id %>" class="section">
			<%= render :partial => '/tasks/show', :locals => {:task => task, :sortable => true} %>
		</div>
	<% end %>
</div>
