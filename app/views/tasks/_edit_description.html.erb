<h2>Description</h2>
<div class="section span-16 last">
	<%= form_for @task, :html => {
		:'data-ajax_behavior' => 'ajax_form',
		:'data-ajax_method' => 'PUT',
		:'data-ajax_success_element' => 'task_description',
		:'data-ajax_error_element' => 'task_description',
		:id => 'edit_task_description'
	} do |f| %>
		<%= f.text_area :description, :class => 'span-13', :rows => 4 %>
		<%= hidden_field_tag 'attribute', 'description', :id => 'attribute_description_field' %>
    <div class="span-3 last">
    	<div class="row_item button round small light" data-button="true" data-submit="true" onclick="void(0)">
    	  <div class="button_content">save</div>
    	</div>
    	<div class="text_with_button small">
  		or <%= link_to (@task.description.blank? ? 'leave blank' : 'cancel'), task_url(@task),
  		 	:'data-ajax_behavior' => 'ajax_link',
  			:'data-ajax_method' => 'GET',
  			:'data-ajax_success_element' => 'task_description',
  			:'data-ajax_data' => "{attribute: 'description'}"%>
      </div>
		</div>
	<% end %>
</div>