<div class="row">
  <div class="row_item">
    <h3>Description</h3>
  </div>
  <div class="row_item last h3_padding list_action">
  	<span onclick="void(0)" href="<%= edit_task_url(@task, :attribute => 'description') %>"
  	 	data-ajax_behavior="ajax_link"
  		data-ajax_method="GET"
  		data-ajax_success_element="task_description_<%= @task.id %>"
  		class="small"> <%= (@task.description.blank? ? 'add description' : 'edit description') %> </span>
  </div>
</div>
<% unless @task.description.blank? %>
<p>
  <%= @task.description %>
</p>
<% end %>  
