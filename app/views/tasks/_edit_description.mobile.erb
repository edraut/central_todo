<h3>Description</h3>
<%= form_for @task, :html => {
	:'data-ajax_behavior' => 'ajax_form',
	:'data-ajax_method' => 'PUT',
	:'data-ajax_success_element' => 'task_description',
	:'data-ajax_error_element' => 'task_description',
	:id => 'edit_task_description'
} do |f| %>
	<%= f.text_area :description, :rows => 3 %>
	<%= hidden_field_tag 'attribute', 'description', :id => 'attribute_description_field' %>
	<%= hidden_field_tag '_method', 'put' %>
  <div class="row">
	<div onclick="void(0)" data-button="true" data-submit="true" class="row_item button round small light "><div class="button_content">save description</div></div>
	<div class="row_item last padding_top_button small">&nbsp;or
	<%= link_to '(cancel)', task_url(@task),
	 	:'data-ajax_behavior' => 'ajax_link',
		:'data-ajax_method' => 'GET',
		:'data-ajax_success_element' => 'task_description',
		:'data-ajax_data' => "{attribute: 'description'}"%>
	</div>
	</div>
<% end %>
