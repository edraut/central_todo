<div class="span-3">
	<h2>Due Date</h2>
</div>
<div class="span-13 last">
  <div class="attribute_action last">
		<%= link_to (@task.due_date.blank? ? 'add due date' : 'edit due date'), edit_task_url(@task, :attribute => 'due_date'),
		 	:'data-ajax_behavior' => 'ajax_link',
			:'data-ajax_method' => 'GET',
			:'data-ajax_success_element' => 'task_due_date'
		%>
  </div>
</div>
<div class="span-16 last section">
  <% if @task.due_date.blank? %>
  none
  <% else %>
    <div class="border_bottom padding_bottom<% if @task.overdue? %> overdue<% end %>">
      <%= @task.due_date.to_formatted_s(:full) + ' ' + @task.due_date.zone %>
    </div>
    <div class="span-15 list_section_inner section_margin_top">
      <%= render :partial => '/reminders/index', :locals => {:remindable => @task} %>
    </div>    
  <% end %>
</div>
