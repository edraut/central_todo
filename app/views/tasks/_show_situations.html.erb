	<div class="span-3">
		<h2>Situations</h2>
	</div>
	<div class="span-6 last">
    <div class="attribute_action last">
  		<%= link_to (@task.situations.for_user(@this_user).any? ? 'change situations' : 'add situations'), edit_task_url(@task, :attribute => 'situations'),
  		 	:'data-ajax_behavior' => 'ajax_link',
  			:'data-ajax_method' => 'GET',
  			:'data-ajax_success_element' => 'task_situation'
  		%>
    </div>
	</div>
	<div class="half_section last section">
	<% if @task.situations.for_user(@this_user).any? %>
    <%= @task.situations.for_user(@this_user).map{|s| s.title}.join(', ') %>
	<% else %>
  	&nbsp;
  <% end %>
  </div>

