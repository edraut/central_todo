<div class="span-3">
<h2>Description</h2>
</div>
<div class="span-4 last">
  <div class="attribute_action">
		<%= link_to (@task.description.blank? ? 'add description' : 'edit description'), edit_task_url(@task),
		 	:'data-ajax_behavior' => 'ajax_link',
			:'data-ajax_method' => 'GET',
			:'data-ajax_success_element' => 'task_description',
			:'data-ajax_data' => "{'attribute':'description'}"
		%>
  </div>
</div>
<div class="span-7 last section">
  <% if @task.description.blank? %>
    &nbsp;
  <% else %>
    <%= @task.description %>
  <% end %>  
</div>
