<% if @task.description.blank? %>
	<%= link_to 'add a description', edit_task_url(@task, :attribute => 'description'),
	 	:'data-ajax_behavior' => 'ajax_link',
		:'data-ajax_method' => 'GET',
		:'data-ajax_success_element' => 'task_description'
	%> &rarr;
<% else %>
	<div class="span-3">
	<h2>Description</h2>
	</div>
	<div class="span-15 last">
    <div class="list_action attach_above">
  		<%= link_to 'edit description', edit_task_url(@task, :attribute => 'description'),
  		 	:'data-ajax_behavior' => 'ajax_link',
  			:'data-ajax_method' => 'GET',
  			:'data-ajax_success_element' => 'task_description'
  		%>
    </div>
	</div>
	<div class="span-18 last section"><%= @task.description %></div>
<% end %>