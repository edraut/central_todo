<div class="span-3">
<h2>Description</h2>
</div>
<div class="span-15 last">
  <div class="list_action attach_above">
		<%= link_to (@task.description.blank? ? 'add description' : 'edit description'), edit_task_url(@task, :attribute => 'description'),
		 	:'data-ajax_behavior' => 'ajax_link',
			:'data-ajax_method' => 'GET',
			:'data-ajax_success_element' => 'task_description'
		%>
  </div>
</div>
<div class="span-18 last section">
  <% if @task.description.blank? %>
    &nbsp;
  <% else %>
    <%= @task.description %>
  <% end %>  
</div>
