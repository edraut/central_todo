<div class="span-17 last" id="header_wrapper">
  <div class="span-17 last text_right quiet">Does this task involve multiple steps or parts? <%= link_to 'Convert it to plan.', convert_task_url(@task) %></div>
  <div id="task_title" class="span-17 last">
  	<%= render :partial => 'show_title' %>
  </div>
</div>
<div class="span-17 last page_content">
  <div class="span-16 last">
    <div id="task_delete" class="list_action attributes last"><%= render :partial => 'show_delete', :locals => {:task => @task} %></div>
    <div id="task_priority" class="list_action attributes"><%= render :partial => 'show_priority', :locals => {:task => @task} %></div>
  </div>
  <div id="task_description" class="span-7 append-2 section_margin_top">
  	<%= render :partial => (@task.description.blank? ? 'edit_description' : 'show_description') %>
  </div>
  <div id="task_due_date" class="span-7 last section_margin_top">
  	<%= render :partial => (@task.due_date.blank? ? 'edit_due_date' : 'show_due_date') %>
  </div>
  <div id="task_project" class="span-7 append-2 section_margin_top">
  	<%= render :partial => (@task.project ? 'show_project_id' : 'edit_project_id') %>
  </div>
  <div id="task_label" class="span-7 last section_margin_top">
  	<%= render :partial => (@task.label ? 'show_label_id' : 'edit_label_id') %>
  </div>
</div>