<h3>Plan</h3>
	<%= form_for @task do |f| %>
  <%  project_array = Project.for_user(@this_user).active
      (project_array = project_array | [@task.project]) if @task.project
      %>
	<%= f.select :project_id, [['none',nil]] + project_array.map{|p| [p.title,p.id]} %>
  	<button type="submit" class="row_item button round small light ">save</button>
  	<div class="row_item last padding_top_button small">&nbsp;or
		<%= link_to '(cancel)', task_url(@task),
		 	:'data-ajax_behavior' => 'ajax_link',
			:'data-ajax_method' => 'GET',
			:'data-ajax_success_element' => 'task_project',
			:'data-ajax_data' => "{attribute: 'project_id'}"%>
		</div>
	<% end %>
