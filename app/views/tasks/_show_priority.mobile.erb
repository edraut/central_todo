<%= form_for @task, :html => {
	:'data-ajax_behavior' => 'ajax_form',
	:'data-ajax_method' => 'PUT',
	:'data-ajax_success_element' => "task_priority"} do |f| %>
	<%= f.hidden_field :priority, :id => "priority_#{@task.id}", :'data-behavior' => 'auto_submit' %>
	<div class="row_item<% if @task.priority? %> checked<% end %> asterisk_icon">&lowast;</div>
	<div class="row_item">&nbsp;priority task</div>
	<%= hidden_field_tag 'attribute', 'priority', :id => 'attribute_priority_field' %>
<% end %>
<%= javascript_tag 'bindCheckBoxProxy();' %>
	