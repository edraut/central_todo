<% unless @task.situation %>
	<%= link_to 'add to a situation', edit_task_url(@task, :attribute => 'situation_id'),
	 	:'data-ajax_behavior' => 'ajax_link',
		:'data-ajax_method' => 'GET',
		:'data-ajax_success_element' => 'task_situation'
	%> &rarr;
<% else %>
	<div class="span-3">
		<h2>Situation</h2>
	</div>
	<div class="span-15 last">
    <div class="list_action attach_above">
  		<%= link_to 'change situation', edit_task_url(@task, :attribute => 'situation_id'),
  		 	:'data-ajax_behavior' => 'ajax_link',
  			:'data-ajax_method' => 'GET',
  			:'data-ajax_success_element' => 'task_situation'
  		%>
    </div>
	</div>
	<div class="span-18 last section"><%= @task.situation.title%>  <%= link_to '(view situation)', situation_url(@task.situation_id), :class => 'quiet'%></div>
<% end %>
