<h3>Due Date</h3>
<%= form_for @task, :html => {
	:'data-ajax_behavior' => 'ajax_form',
	:'data-ajax_method' => 'PUT',
	:'data-ajax_success_element' => "task_due_date_#{@task.id}",
	:'data-ajax_error_element' => "task_due_date_#{@task.id}",
	:id => 'edit_due_date'
} do |f| %>
<%= f.date_select :due_date, {:use_short_month => true}, {:class => 'auto_width'} %><br/>
	<%= hidden_field_tag 'attribute', 'due_date', :id => "attribute_due_date_field_#{@task.id}" %>
  <div class="row">
  	<div onclick="void(0)" data-button="true" data-submit="true" class="row_item button round small light "><div class="button_content">save due date</div></div>
	<div class="row_item small padding_top_button">
    <% unless @task.due_date.blank? %>,
  	<span onclick="void(0)" href="<%= edit_task_url(@task, :attribute => 'due_date', :nullify => true) %>"
  	 	data-ajax_behavior="ajax_link"
  		data-ajax_method="PUT"
  		data-ajax_success_element="task_due_date_<%= @task.id %>"
  		class="small"> (cancel) </span>
    <% else %>
    &nbsp;
		<% end %>or
  	<span onclick="void(0)" href="<%= edit_task_url(@task, :attribute => 'due_date') %>"
  	 	data-ajax_behavior="ajax_link"
  		data-ajax_method="PUT"
  		data-ajax_success_element="task_due_date_<%= @task.id %>"
  		class="small"> (cancel) </span>
	</div>
	</div>
<% end %>
