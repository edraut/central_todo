<%= form_for @task, :html => {
	:'data-ajax_behavior' => 'ajax_form',
	:'data-ajax_method' => 'PUT',
	:'data-ajax_success_element' => "task_done",
	:id => 'edit_task_done'} do |f| %>
	<%= f.check_box :state, {:'data-behavior' => 'auto_submit'}, @task.archived? ? 'archived' : 'complete', 'active' %>
  <%= hidden_field_tag 'attribute','done', :id => 'attribute_done_field' %>
	<%= hidden_field_tag '_method', 'put' %>
<% end %>
<%= javascript_tag do %>
  jQuery(document).ready(function(){
    <% if @task.done? %>
      jQuery('#task_title_display').addClass('completed');
    <% else %>
      jQuery('#task_title_display').removeClass('completed');
    <% end %>
    
  });
<% end %>