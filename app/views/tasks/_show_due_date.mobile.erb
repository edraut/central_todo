<div class="row">
<div class="row_item">
	<h3>Due Date</h3>
</div>
<div class="row_item last h3_padding list_action">
	<%= link_to (@task.due_date.blank? ? 'add due date' : 'edit due_date'), edit_task_url(@task, :attribute => 'due_date'),
	 	:'data-ajax_behavior' => 'ajax_link',
		:'data-ajax_method' => 'GET',
		:'data-ajax_success_element' => 'task_due_date'
	%>
</div>
</div>
<% unless @task.due_date.blank? %>
<div class="<% if @task.overdue? %> overdue<% end %>"><%= @task.due_date.to_formatted_s(:full) + ' ' + @task.due_date.zone %></div>
<% end %>