<%= yield %>
<%= javascript_tag do %>
	jQuery(document).ready(function(){
    <% if params[:attribute] == 'title' %>
    	<% if action_name == 'edit' %>
      	jQuery('#<%= @item.class.name.underscore %>_<%= params[:attribute] %>').addClass('section');
      <% else %>
        jQuery('#<%= @item.class.name.underscore %>_<%= params[:attribute] %>').removeClass('section');
      <% end %>
    <% end %>
  	<% unless flash[:ajax_notice].blank? %>
  	function clearFlash(){
  		jQuery('#flash_notice').fadeOut(500);
  		setTimeout("jQuery('#flash_notice').remove();",500);
  	}
  	jQuery('#<%= @item.class.name.underscore %>_<%= params[:attribute] %>').append('<div id="flash_notice" style="display:none;" class="flash_notice"><%= flash[:ajax_notice] %></div>');
  	jQuery('#flash_notice').fadeIn(500);
  	setTimeout(clearFlash,2000);
  	<% end %>
  	addDatePicker("[data-behavior='date_picker']");
	  roundCorners();
	  popButtons();
	});
<% end %>
