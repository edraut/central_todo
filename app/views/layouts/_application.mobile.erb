<div id="top_nav">
  <div class="meta_nav">
		<% if @this_user %>
			<div class="left"><div onclick="void(0)" data-button="true" href="<%= account_user_url(@this_user) %>" class="button round dark" %>account</div></div>
			<h1><%= @page_title %></h1>
			<div class="right"><div onclick="void(0)" data-button="true" href="<%= sign_out_url %>" class="button round dark" %>sign out</div></div>
		<% else %>
		  <div class="left"><div onclick="void(0)" data-button="true" href="<%= sign_up_url %>" class="button round dark" %>sign up</div></div>
			<h1><%= @page_title %></h1>
		  <div class="left"><div onclick="void(0)" data-button="true" href="<%= sign_in_url %>" class="button round dark" %>sign in</div></div>
		<% end %>
	</div>
    <% if @this_user %>
    <div data-role="navbar" class="main_nav">
      <div class="quarter_nav" onclick="void(0)" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'dashboard' %> dark<% else %> medium <% end %>">
  				<%= link_to 'Dashboard', dashboard_url %>
  		</div></div>
  		<div class="quarter_nav" onclick="void(0)" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'plans' %> dark<% else %> medium<% end %>">
  				<%= link_to 'Plans', plans_url %>
  		</div></div>
  		<div class="quarter_nav" onclick="void(0)" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'contacts' %> dark<% else %> medium<% end %>">
  				<%= link_to 'Contacts', users_url %>
  		</div></div>
  		<div class="quarter_nav" onclick="void(0)" data-button="true" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'labels' %> dark<% else %> medium<% end %> last">
  				<%= link_to 'Labels', labels_url %>
  		</div></div>
		</div>
		<% end %>
</div>
<div id="subnav" class="sub_nav">
  <% if (['plans','folders'].include? @nav_tab and (@subnav_tab.class.name == 'Fixnum')) or
        (['contacts'].include? @nav_tab and !@subnav_tab.nil?)
        if @subnav_tab.class.name == 'Fixnum'
          case controller_name
          when 'tasks'
            this_title = @task.project.title
            this_link = plan_url(@task.project)
          when 'projects'
            if @project.folder_for(@this_user)
              this_title = @project.folder_for(@this_user).title
              this_link = folder_url(@project.folder_for(@this_user))
            elsif @project.user_id != @this_user.id
              this_title = 'Projects from ' + @project.user.handle
              this_link = user_url(@project.user_id)
            end
          when 'folders'
            this_title = 'All Folders'
            this_link = plans_url
          when 'users'
            this_title = 'All Contacts'
            this_link = users_url
          end
        end
   %>
    <div class="full_nav">
      <div class="border_wrapper last">
        <%= link_to '&lang;&nbsp;&nbsp;&nbsp;&nbsp;'.html_safe + this_title, this_link %>
      </div>
    </div>
  <% end %>
</div>
<div id="main_content" class="container" data-role="content">
<%= yield %>
</div>
<%= javascript_tag do %>
	jQuery(document).ready(function(){
		<% unless flash[:notice].blank? %>
			function clearFlash(){
				jQuery('#flash_notice').fadeOut(1000);
				setTimeout("jQuery('#flash_notice').remove();",1000);
			}
			jQuery('#main_content').prepend('<div id="flash_notice" style="display:none;" class="flash_notice"><%= flash[:notice] %></div>');
			jQuery('#flash_notice').fadeIn(500);
			setTimeout(clearFlash,3000);
		<% end %>
	})
<% end %>
