<div id="top_nav">
  <div class="meta_nav">
		<% if @this_user %>
			<div class="left"><%= link_to 'account', user_url(@this_user), :class => 'button round dark' %></div>
			<h1><%= @page_title %></h1>
			<div class="right"><%= link_to 'sign out', sign_out_url, :class => 'button round dark' %></div>
		<% else %>
			<div class="left"><%= link_to 'sign up', sign_up_url, :class => 'button round dark' %></div>
			<h1><%= @page_title %></h1>
			<div class="right"><%= link_to 'sign in', sign_in_url, :class => 'button round dark' %></div>
		<% end %>
	</div>
    <% if @this_user %>
    <div data-role="navbar" class="main_nav">
      <div class="quarter_nav" onclick="void(0)" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'dashboard' %> dark<% else %> medium <% end %>">
  				<%= link_to 'Dashboard', dashboard_url %>
  		</div></div>
  		<div class="quarter_nav" onclick="void(0)" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'schedule' %> dark<% else %> medium<% end %>">
  				<%= link_to 'Schedule', schedule_url %>
  		</div></div>
  		<div class="quarter_nav" onclick="void(0)" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'plans' %> dark<% else %> medium<% end %>">
  				<%= link_to 'Plans', plans_url %>
  		</div></div>
  		<div class="quarter_nav" onclick="void(0)" data-button="true" data-button="true"><div class="border_wrapper button <% if @nav_tab == 'labels' %> dark<% else %> medium<% end %> last">
  				<%= link_to 'Labels', labels_url %>
  		</div></div>
		</div>
		<% end %>
</div>
<% if @mobile_subnav %>
<div id="subnav" class="sub_nav">
  <% if @nav_tab == 'plans' and @task %>
    <div class="full_nav">
      <div class="border_wrapper last">
        <%= link_to @task.project.title, plan_url(@task.project) %>
      </div>
    </div>
  <% end %>
</div>
<% end %>
<div id="main_content" class="container" data-role="content">
<%= yield %>
</div>
<%= javascript_tag do %>
	jQuery(document).ready(function(){
		<% unless flash[:notice].blank? %>
			function clearFlash(){
				jQuery('#flash_notice').fadeOut(1000);
				setTimeout("jQuery('#flash_notice').remove();",1000);
			}
			jQuery('#main_content').prepend('<div id="flash_notice" style="display:none;" class="flash_notice"><%= flash[:notice] %></div>');
			jQuery('#flash_notice').fadeIn(500);
			setTimeout(clearFlash,3000);
		<% end %>
	})
<% end %>
